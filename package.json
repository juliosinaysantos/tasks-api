{
  "name": "tasks-api",
  "version": "1.0.0",
  "description": "A Task management API with Node.js, TypeScript and GraphQL.",
  "main": "build/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/src/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliosinaysantos/tasks-api.git"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "GraphQL",
    "Prisma"
  ],
  "author": "Julio Sinay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/juliosinaysantos/tasks-api/issues"
  },
  "homepage": "https://github.com/juliosinaysantos/tasks-api#readme",
  "devDependencies": {
    "@types/node": "^16.4.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
